<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e0e0e0">

    <View
        android:id="@+id/iv_top_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/bg_toolbar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/card_view"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="6dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_task_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/intro_image_1"
                android:scaleType="fitCenter"
                android:layout_above="@+id/tv_task_title"/>

            <common.views.FontTextView
                android:id="@+id/tv_task_title"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:fontName="roboto-regular.ttf"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:gravity="left|center_vertical"
                android:textSize="14dp"
                android:paddingLeft="12dp"
                android:paddingRight="76dp"
                android:text="You commute from JFK International Airport to Brooklyn"
                android:layout_above="@+id/tv_your_task"
                android:background="#9CCC65"/>
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@mipmap/ic_compass"
                android:layout_marginBottom="-28dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:id="@+id/iv_compass"
                android:layout_centerVertical="true"
                android:layout_alignBottom="@+id/iv_task_image"/>
            <common.views.FontTextView
                android:id="@+id/tv_your_task"
                app:fontName="roboto-regular.ttf"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="27dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/YOUR_TASK"
                android:alpha="0.54"
                android:gravity="left"
                android:textSize="16dp"
                android:layout_above="@+id/tv_task_descrpition"
                android:layout_width="match_parent"/>

            <common.views.FontTextView
                android:id="@+id/tv_task_descrpition"
                app:fontName="roboto-regular.ttf"
                android:layout_marginLeft="27dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/In_Brooklyn"
                android:alpha="0.87"
                android:gravity="left"
                android:textSize="14dp"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_marginBottom="17dp"
                android:layout_marginRight="48dp"
                android:layout_above="@+id/vw_border"
                android:layout_width="match_parent"/>

            <View
                android:id="@+id/vw_border"
                android:layout_above="@+id/lt_character_and_rating"
                android:layout_width="match_parent"
                android:background="@android:color/black"
                android:alpha="0.14"
                android:layout_height="1px"/>
            <RelativeLayout
                android:id="@+id/lt_character_and_rating"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="13dp"
                android:layout_alignParentBottom="true">
                <View
                    android:layout_width="0px"
                    android:id="@+id/divider"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"/>
                <RelativeLayout
                    android:id="@+id/lt_character"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/divider">
                    <ImageView
                        android:id="@+id/iv_character_photo"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/iv_character_photo"
                        android:layout_marginLeft="9dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <common.views.FontTextView
                            android:id="@+id/tv_character_name"
                            app:fontName="roboto-regular.ttf"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Mark White"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:alpha="0.87"
                            android:gravity="left"
                            android:textSize="16dp"
                            android:layout_width="match_parent"/>
                        <common.views.FontTextView
                            android:id="@+id/tv_character_post"
                            app:fontName="roboto-regular.ttf"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Mark White"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:alpha="0.54"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:layout_width="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/lt_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/divider"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        style="?android:ratingBarStyleSmall"
                        android:numStars="5"
                        android:id="@+id/rating"/>
                    <common.views.FontTextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        app:fontName="roboto-medium.ttf"
                        android:textColor="#f09c20"
                        android:gravity="right|center_vertical"
                        android:textSize="20dp"
                        android:text="4.5"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp">

        <Button
            android:id="@+id/btn_task_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/orange"
            android:gravity="center"
            android:text="@string/get_started"
            android:textColor="@android:color/white"
            android:textSize="@dimen/intro_btn_continue_txtsize"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>