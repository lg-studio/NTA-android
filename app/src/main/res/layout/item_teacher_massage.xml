<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >

    <common.views.RoundedImageView
        android:id="@+id/teacher_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_fake_scene"
        />

    <common.views.FontTextView
        android:id="@+id/teacher_name"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Clara"
        android:textSize="14dp"
        android:gravity="center"
        app:fontName="@string/roboto_regular"
        android:layout_below="@+id/teacher_image"
        android:textColor="@color/black_57"
        />

    <common.views.FontTextView
        android:id="@+id/teacher_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/teacher_image"
        android:text="massage"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:textSize="16dp"
        android:paddingLeft="48dp"
        android:paddingBottom="24dp"
        android:background="@mipmap/npc_word"
        android:textColor="@color/black_87"
        app:fontName="@string/roboto_regular"
        />


</RelativeLayout>