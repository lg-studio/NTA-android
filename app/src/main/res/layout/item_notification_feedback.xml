<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/feedback_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/feedback_score_circle"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <common.views.FontTextView
            android:id="@+id/feedback_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="100%"
            android:textSize="18sp"
            app:fontName="@string/roboto_light"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/feedback_image"
        android:orientation="vertical">

        <common.views.FontTextView
            android:id="@+id/feedback_task_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scene 1, task 2"
            android:textColor="@color/black_57"
            android:textSize="10dp"
            app:fontName="@string/roboto_light" />

        <common.views.FontTextView
            android:id="@+id/feedback_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Finding new apartment"
            android:textColor="@color/black_87"
            android:textSize="16sp"
            app:fontName="@string/roboto_regular" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_notification_time"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                android:background="@mipmap/ic_time_48_px" />

            <common.views.FontTextView
                android:id="@+id/feedback_finished_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scene 1, task 2"
                android:layout_toRightOf="@id/ic_notification_time"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/black_57"
                />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>