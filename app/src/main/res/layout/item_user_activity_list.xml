<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <common.views.RoundedImageView
        android:id="@+id/activity_task_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/test_place" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/activity_task_image"
        android:orientation="vertical"
        android:padding="8dp">

        <common.views.FontTextView
            android:id="@+id/activity_task_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Episode 1 , Scene 1, Task 1"
            android:textColor="@color/black_57"
            android:textSize="10sp"
            app:fontName="@string/roboto_light" />

        <common.views.FontTextView
            android:id="@+id/activity_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finding your apartment"
            android:textColor="@color/black_87"
            android:textSize="16sp"
            app:fontName="@string/roboto_regular" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <common.views.FontTextView
                android:id="@+id/activity_task_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33"
                android:textColor="@color/black_87"
                android:textSize="21sp"
                app:fontName="@string/roboto_regular" />

            <common.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="min"
                android:textColor="@color/black_57"
                android:textSize="19sp"
                app:fontName="@string/roboto_light"
                />

            <common.views.FontTextView
                android:id="@+id/activity_task_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="99"
                android:textColor="@color/black_87"
                android:textSize="21sp"
                app:fontName="@string/roboto_regular" />

            <common.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="%"
                android:textColor="@color/black_57"
                android:textSize="19sp"
                app:fontName="@string/roboto_light"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_time_48_px" />

            <common.views.FontTextView
                android:id="@+id/activity_task_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Yesterday"
                android:textColor="@color/black_57"
                android:textSize="10sp"
                app:fontName="@string/roboto_light"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>