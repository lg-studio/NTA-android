<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/profile_toolbar"
        layout="@layout/incl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <common.views.FontTextView
            android:id="@+id/dictionary_sort_by_az"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_toolbar"
            android:gravity="center"
            android:padding="4dp"
            android:text="SORT BY A-Z"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:fontName="@string/roboto_regular" />

        <common.views.FontTextView
            android:id="@+id/dictionary_sort_by_this"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_toolbar"
            android:gravity="center"
            android:padding="4dp"
            android:text="SORT BY THIS"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:fontName="@string/roboto_regular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <FrameLayout
            android:id="@+id/sort_by_az_tab"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/orange_dark"
            >

        </FrameLayout>

        <FrameLayout
            android:id="@+id/sort_by_this_tab"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/orange_dark"
            android:visibility="invisible"
            >

        </FrameLayout>

    </LinearLayout>

    <com.tjerkw.slideexpandable.library.ActionSlideExpandableListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dictionary_list"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"/>

</LinearLayout>